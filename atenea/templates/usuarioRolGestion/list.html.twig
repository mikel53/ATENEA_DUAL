{% extends 'base.html.twig' %}

{% block title %}Lista de UsuariosRolGestion{% endblock %}
{% block body %}
    <section class="bg-white text-black mb-0">
        <div class="container">
            <section class="row">
                <div class="col-md-8">
                    <h1>Listado de Relacion Usuario UnidadGestion</h1>
                </div>
                <div class="col-md-4">

                    <div class="btn-group float-right mt-2" role="group">
                        <a class="btn btn-primary btn-md" href="{{ path('usuarioRolGestion _new') }}">+ Nueva Relacion Usuario Gestion Rol</a>
                    </div>

                </div>
            </section>

            {% if searchTerm is defined %}
                <div class="row">
                    <div class="col-md-8">
                        <p>Resultados de b√∫squeda por: <strong>{{ searchTerm }}</strong></p>
                    </div>
                    <div class="col-md-4">
                        <a class="btn btn-default btn-sm float-right" href="{{ path('alchol_list') }}">x Eliminar resultados</a>
                    </div>
                </div>
            {% endif %}

            {% for message in app.flashes('notice') %}
                <div class="alert alert-success">
                    <strong>Conseguido!</strong> {{ message }}
                </div>
            {% endfor %}

            <table class="table table-striped">
                <thead class="table-info">
                    <tr>
                        <th>Usuario</th>
                          <th>Permiso</th>
                          <th>Unidad de gestion</th>
                          <th>Opciones</th>



                    </tr>
                </thead>
                <tbody>
                    {% for usuarioRolGestion in usuarioRolGestion %}
                        <tr>
                            <td>{{ usuarioRolGestion.usuarios.nombre }}</td>
                            <td>{{ usuarioRolGestion.permiso.tipos }}</td>
                            <td>{{ usuarioRolGestion.unidadGestion.nombre }}</td>

                            <td>
                                <a class="btn btn-secondary btn-md" href="{{ path('suarioRolGestion_edit', {'id': usuarioRolGestion.id}) }}">Editar</a>
                                <a class="btn btn-danger btn-md" href="{{ path('usuarioRolGestion_delete', {'id': usuarioRolGestion.id}) }}">Eliminar</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No hay relaciones.</td>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>

            

        </div>

    </section>

{% endblock %}
