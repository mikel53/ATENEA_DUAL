{% extends 'base.html.twig' %}

{% block title %}
    QSSMA
{% endblock %}


{% block body %}
    <section class="bg-white text-black mb-0">
        <div class="container">
            <section class="row">
                <div class="col-md-8"></div>
                <div class="col-md-4"></div>
            </section>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <a class="btn btn-secondary btn-md" href="">Nuevo</a>
                    <a id="editar" class="btn btn-secondary btn-md">Editar</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <h1>Cuestiones Internas</h1>
                    <table id="cuestiones" class="table table-striped">
                        <thead>
                            <th>Id</th>
                            <th>Nombre</th>
                        </thead>
                        <tbody>
                            {% for c in cuestiones %}
                                <tr class="cuestion">
                                    <td>
                                        {{ c.id }}
                                    </td>
                                    <td>
                                        {{ c.descripcion }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfooter>
                            <a class="btn btn-secondary btn-md" href="{{ path('tipos_nuevo') }}">Nuevo</a>
                        </tfooter>
                    </table>
                </div>
                <div class="col-md-4">
                    <h2>Fortalezas</h2>
                    <table id="fortalezas" class="table table-striped">
                        <thead>
                            <th>Id</th>
                            <th>Nombre</th>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>
                <div class="col-md-4">
                    <h2>Debilidades</h2>
                    <table id="debilidades" class="table table-striped">
                        <thead>
                            <th>Id</th>
                            <th>Nombre</th>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    {% endblock %}

    {% block javascripts %}
        <script>
            $(document).ready(function () {
                $(".cuestion").on("click", function (event) {
                    $('.debilidad').remove();
                    $('.fortaleza').remove();                    
                    $('.cuestion').css("background-color", "");
                    ($(this)).css("background-color", "#bfbfbf");
                    var c = ($(this)).index();
                    var cid = $(".cuestion")[c];
                    cid = cid.children[0].innerText;
                    $.ajax({
                        url: 'aspectos/' + cid,
                        type: 'POST',
                        data: {
                            id: cid
                        },
                        dataType: 'json',
                        async: true,

                        success: function (data, status) {
                            for (i = 0; i < data.length; i ++) {
                                var aspecto = data[i];
                                if (aspecto["favorable"]) {
                                    var e = $('<tr class="fortaleza"><td class="for_id"></td><td class="for_nombre"></td></tr>');
                                    $(".for_id", e).html(aspecto["id"]);
                                    $(".for_nombre", e).html(aspecto["descripcion"]);
                                    $("#fortalezas").append(e);
                                } else {
                                    var e = $('<tr class="debilidad"><td class="deb_id"></td><td class="deb_nombre"></td></tr>');
                                    $(".deb_id", e).html(aspecto["id"]);
                                    $(".deb_nombre", e).html(aspecto["descripcion"]);
                                    $("#debilidades").append(e);
                                }
                            }
                            $(".fortaleza").add('.debilidad').on("click", function(event){
                                $('.fortaleza').css("background-color", "");
                                $('.debilidad').css("background-color", "");
                                var c = ($(this)).index();
                                var parent = ($(this)).parent();
                                if($(parent).prev().hasClass("fortaleza")){
                                    var cid = $(".fortaleza")[c];
                                }else{
                                    var cid = $(".debilidad")[c];
                                }
                                cid = cid.children[0].innerText;
                                ($(this)).css("background-color", "#bfbfbf");
                                $("#editar").on("click", function(event) {
                                    $.ajax({
                                        url: 'edita/' +  cid,
                                        type: 'POST',
                                        data: {id: cid},
                                        dataType: 'html',
                                        async: true,
                                        success: function (data, status){
                                            window.location.replace('edita/' +  cid);
                                        },
                                        error: function (xhr, textStatus, errorThrown){
                                            alert('Ajax request failed');
                                        }
                                    });
                                });
                            });
                        },
                        error: function (xhr, textStatus, errorThrown) {
                            alert('Ajax request failed.');
                        }
                    });
                });


            });
        </script>
    {% endblock %}
