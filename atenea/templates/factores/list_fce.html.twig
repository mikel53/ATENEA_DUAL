{% extends 'base.html.twig' %}

{% block title %}QSSMA
{% endblock %}


{% block body %}

    <div class="container">
        <section class="bg-white text-black mb-0">
            <div class="container">
                <section class="row">
                    <div class="col-md-8"></div>
                    <div class="col-md-4"></div>
                </section>


                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success">
                        <strong>Success!</strong>
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="container">
                    <h1 class="text-center">Lista de factores críticos de éxito</h1>
                    <div class="row justify-content-center">
                        <div class="col-md-6 text-center">

                            <table class="table">
                                <thead class="bg-info text-white">
                                    <th>Nombre</th>
                                </thead>
                                <tbody>
                                    {% for f in factores %}
                                    <tr>
                                        <td class="text-dark"><a href="{{ path("get_fce_one", {id: f.id}) }}">{{ f.nombre }}</a></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>


                    </div>

                </div>
            {% endblock %}
