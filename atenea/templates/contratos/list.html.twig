{% extends 'base.html.twig' %}

{% block title %}Listado de contratos{% endblock %}
{% block body %}
    <section class="bg-white text-black mb-0">
        <div class="container">
            <section class="row">
                <div class="col-md-8">
                    <h1>Lista de Contratos</h1>
                </div>
                <div class="col-md-4">

                    <div class="btn-group float-right mt-2" role="group">
                    {% if is_granted('ROLE_ADMIN') %}

                        <a class="btn btn-primary btn-md" href="{{ path('contratos_new') }}">+ Nuevo Contratos</a>
                      {% endif %}

                    </div>

                </div>
            </section>

            {% if searchTerm is defined %}
                <div class="row">
                    <div class="col-md-8">
                        <p>Resulados de busqueda por: <strong>{{ searchTerm }}</strong></p>
                    </div>
                    <div class="col-md-4">
                        <a class="btn btn-default btn-sm float-right" href="{{ path('contratos_list') }}">x Eliminar resultados</a>
                    </div>
                </div>
            {% endif %}

            {% for message in app.flashes('notice') %}
                <div class="alert alert-success">
                    <strong>Conseguido!</strong> {{ message }}
                </div>
            {% endfor %}

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Fecha Alta</th>
                        <th>Fecha alta</th>
                        <th>Descripcion</th>



                    </tr>
                </thead>
                <tbody>
                    {% for contratos in contratos %}
                        <tr>
                            <td>{{ contratos.id }}</td>
                            <td>{{ contratos.fechaAlta|date("m/d/Y") }}</td>
                            <td>{{ contratos.fechaBaja|date("m/d/Y") }}</td>
                            <td>{{ contratos.descripcion }}</td>

                            <td>
                            {% if is_granted('ROLE_ADMIN') %}

                                <a class="btn btn-secondary btn-md" href="{{ path('contratos_edit', {'id': contratos.id}) }}">Editar</a>
                              {% endif %}

                            </td>

                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No hay Contratos.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <form name="form" method="post" action="{#{ path('alchol_search') }#}">
                <div id="form">
                    <div class="form-group">
                        <label for="form_term" class="form-control-label required"><em><strong>Formulario de b√∫squeda</strong></em></label>
                        <input type="text" id="form_term" name="term" required="required" class="form-control" placeholder="Nombre de Usuario">
                    </div>
                    <div class="form-group">
                        <button type="submit" id="form_save" name="save" class="btn-secondary btn">Buscador</button>
                    </div>
            </form>

        </div>

    </section>

{% endblock %}
