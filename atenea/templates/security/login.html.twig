{% extends 'base.html.twig' %}

{% block title %}Entrar!{% endblock %}

{% block body %}
<header class="masthead bg-white">
    <div class="container">
        <img class="img-fluid mb-5 d-block" src="{{ absolute_url(asset ('img/logo.png')) }}" alt="">
        <h1 class="mb-0">Projecte ATENEA Symfony</h1>
        <hr class="star-light">
    </div>
</header>
<form method="post" class="container">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.nombre }}, <a href="{{ path('app_logout') }}">Salir</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Porfavor Resgistrese</h1>
    <label for="inputUsername">Nombre de Usuario</label>
    <input type="text" value="{{ last_username }}" name="nombre" id="inputUsername" class="form-control" required autofocus>
    <label for="inputPassword">Contrase√±a</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Entrar
    </button>
</form>
{% endblock %}
